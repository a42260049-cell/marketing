{ q: "企業から金銭や物品など利益供与されているのにもかかわらず、それを意図的に隠し中立的な立場から商品を勧めているかのように装うこと", options: ["ステルス・マーケティング", "自主規制", "公正競争規約", "プロモーション倫理"], answerIndex: 0 },

    ];

    // ランダムで15問を抽出
    const questions = allQuestions.sort(() => Math.random() - 0.5).slice(0, 15);
    let currentQuestionIndex = 0;

    // 敵管理
    let enemyIndex = 0;
    let enemyMaxHP = 5;
    let enemyHP = enemyMaxHP;

    // 成績用
    let correctCount = 0;
    let wrongList = [];

    // 敵の初期化
    function setEnemy() {
      if (enemyIndex >= enemyImages.length) {
        showResult();
        return;
      }
      const img = enemyImages[enemyIndex];
      document.getElementById("enemyImg").src = img;
      enemyHP = enemyMaxHP;
      updateHP();
    }

    // HPバー更新
    function updateHP() {
      const hpPercent = (enemyHP / enemyMaxHP) * 100;
      document.getElementById("enemyHP").style.width = hpPercent + "%";
    }

    // 問題表示
    function showQuestion() {
      if (currentQuestionIndex >= questions.length) {
        showResult();
        return;
      }
      const q = questions[currentQuestionIndex];
      document.getElementById("question").textContent = q.q;
      const optionsDiv = document.getElementById("options");
      optionsDiv.innerHTML = "";
      q.options.forEach((opt, i) => {
        const btn = document.createElement("button");
        btn.textContent = opt;
        btn.className = "option";
        btn.onclick = () => checkAnswer(i);
        optionsDiv.appendChild(btn);
      });
    }

// 回答チェック
function checkAnswer(selected){
  const q = questions[currentQuestionIndex];
  if(selected === q.answerIndex){
    enemyHP--;
    updateHP();
    document.getElementById("message").textContent = "正解！ 敵にダメージ！";
    correctCount++;

    if(enemyHP <= 0){
      if(enemyIndex === enemyImages.length - 1){
        createExplosion();
        setTimeout(showResult, 800);
        return; // 最後の敵はここで処理終了
      } else {
        document.getElementById("message").textContent = "敵を倒した！";
        enemyIndex++;
        setEnemy();
      }
    }
  } else {
    document.getElementById("message").textContent = "不正解！もう一度挑戦！";
    wrongList.push({question:q.q, correct:q.options[q.answerIndex]});
  }

 currentQuestionIndex++;
      if (currentQuestionIndex >= questions.length) {
        showResult();
      } else {
        showQuestion();
      }
    }


// 爆発表示
function createExplosion(){
  const enemyDiv = document.getElementById("enemy");
  const explosion = document.createElement("img");
  explosion.src = "bakuhatsu2.png"; // いらすとや爆発画像に置換
  explosion.className = "explosion";
  enemyDiv.appendChild(explosion);
  setTimeout(()=>document.getElementById("enemyImg").style.display="none",600);
}


    // 成績画面表示
    function showResult() {
      document.getElementById("quiz").style.display = "none";
      document.getElementById("enemy").style.display = "none";
      document.querySelector(".hp-bar").style.display = "none";
      document.getElementById("message").style.display = "none";

      const resultDiv = document.getElementById("result");
      resultDiv.style.display = "block";

      const scorePercent = (correctCount / questions.length) * 100;
      let rankClass = "rank-c";
      let rankText = "Cランク…もっと頑張ろう！";

      if (scorePercent >= 95) { rankClass = "rank-s"; rankText = "Sランク！完璧！✨"; }
      else if (scorePercent >= 70) { rankClass = "rank-a"; rankText = "Aランク！素晴らしい！"; }
      else if (scorePercent >= 50) { rankClass = "rank-b"; rankText = "Bランク！あと少し！"; }

      resultDiv.innerHTML = `<h2>成績発表</h2>
        <p>正解数: ${correctCount} / ${questions.length}</p>
        <p class="rank ${rankClass}">${rankText}</p>`;

      if (wrongList.length > 0) {
        resultDiv.innerHTML += "<h3>間違えた問題を復習しよう！</h3>";
        wrongList.forEach(item => {
          resultDiv.innerHTML += `<div class="mistake"><strong>Q:</strong> ${item.question}<br><strong>正解:</strong> ${item.correct}</div>`;
        });
      } else {
        resultDiv.innerHTML += "<p>全問正解！素晴らしい！🎉</p>";
      }

      // もう一度挑戦ボタン
      resultDiv.innerHTML += `<button id="retryBtn">もう一度挑戦</button>`;
      document.getElementById("retryBtn").onclick = () => location.reload();
    }

    // ゲーム開始
    setEnemy();
    showQuestion();
  </script>
</body>
</html>
